  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server",
      "program": "${workspaceFolder}\\server\\bin\\www",
      "cwd": "${workspaceFolder}\\server",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/server/node_modules/**/*.js"
      ]
    },
    {
      "name": "Launch Chrome",
      "program": "${workspaceFolder}/app.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**","${workspaceFolder}/client/node_modules/**/*.js",],
      "type": "pwa-node",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}\\client\\src\\index.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch specific Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\utils"
    }
  ]
}
